<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bccbd2"
    tools:context=".Vista.EmpleadosVista">

    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#D35400"
        android:text="@string/btnAgregar"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="28dp"
        app:icon="@drawable/outline_add_24"
        app:iconPadding="0dp"
        app:iconSize="22dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/recicler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recicler"
        android:layout_width="355dp"
        android:layout_height="487dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/empleados" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/swBuscar"
            android:layout_width="400dp"
            android:layout_height="56dp"
            android:background="@android:color/transparent"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:iconifiedByDefault="false"
            app:queryHint="Buscar empleado..." />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>